<div
  class="container-fluid d-flex justify-content-center align-items-center my-5 flex-grow-1"
>
<style>
    input[type=number]::-webkit-inner-spin-button { opacity: 1 }
  </style>
  <div class="row row-cols-1 row-cols-md-4 g-3">

      <div class="col">

        <div class="card h-100" style="width: 18rem;">
          {{#if product._id}}
          <a href="/products/{{product._id}}"></a>
          {{^}}
          <a href="/products/{{product.id}}">
          {{/if}}
            <img
              src="{{product.thumbnail}}"
              class="object-fit-cover card-img-top"
              alt="{{product.title}}"
            />
          </a>
          <div
            class="card-body d-flex flex-column justify-content-between align-items-start"
          >
            <h5 class="card-title">{{product.title}}</h5>
            <p class="card-text">{{product.description}}</p>
            <form action="" class="row" id="add_cart">
              <p class="btn btn-outline-success col-4">$ {{product.price}}</p>
              <div class="form-outline col-4">
                <input
                  type="number"
                  class="form-control"
                  placeholder="0"
                    name="units"
                      min="0" max="{{product.stock}}"
                             required />
                              {{#if product._id}}
                                <input type="hidden" name="product" value="{{product._id}}">
                              {{^}}
                                <input type="hidden" name="product" value="{{product.id}}">
                              {{/if}}
              </div>
              {{#if units}}
              <input
                type="submit"
                 value="Agregar"
                class="btn btn-primary col-8"
              ></input>
              {{^}}
              <input
                type="submit"
                 value="Sin stock"
                class="btn btn-outline-danger col-8"
              ></input>
              {{/if}}

            </form>
          </div>
        </div>
      </div>
  </div>
</div>
{{#if product._id}}
          <script src="/public/js/productDB.js"></script>
          {{^}}
          <script src="/public/js/productFS.js"></script>
          {{/if}}