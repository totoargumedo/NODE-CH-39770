<div
  class="container-fluid d-flex justify-content-center align-items-center my-5 flex-grow-1"
>
  <style>
    input[type=number]::-webkit-inner-spin-button { opacity: 1 }
  </style>
  <div class="row row-cols-1 row-cols-md-4 g-3">

    {{#each products}}
      <div class="col">

        <div class="card h-100" style="width: 18rem;">
          {{#if this._id}}
            <a href="/productsDB/{{this._id}}"></a>
          {{^}}
            <a href="/productsFS/{{this.id}}">
          {{/if}}
            <img
              src="{{this.thumbnail}}"
              class="object-fit-cover card-img-top"
              alt="{{this.title}}"
            />
          </a>
          <div
            class="card-body d-flex flex-column justify-content-between align-items-start"
          >
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <div class="row row-cols-1">
              <p class="btn btn-outline-success col">$ {{this.price}}</p>
              {{#if this._id}}
                <a
                href="/productsDB/{{this._id}}"
                class="btn btn-primary col"
              >Comprar</a>
            </div>
          {{^}}
            <a
                href="/productsFS/{{this.id}}"
                class="btn btn-primary col"
              >Comprar</a>
            </div>
          {{/if}}
              
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>