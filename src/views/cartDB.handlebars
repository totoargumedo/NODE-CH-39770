<div
  class="container-fluid d-flex justify-content-center align-items-center my-5 flex-grow-1"
>
  <table class="table table-dark table-striped table-hover w-75">
    <tbody>
      {{#each products}}
        <tr id="product-{{this.product_id._id}}">
          <td><img src="{{this.product_id.thumbnail}}" alt="{{this.product_id.title}}" height="30" style="border-radius: 100%;"></td>
          <th scope="row">{{this.product_id.title}}</th>
          <td>{{this.quantity}}</td>
          <td>
            <button class="btn btn-danger" onclick="delete_cart_product({{this.product_id._id}},{{this.quantity}})"><svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M135.2 17.7C140.6 6.8 151.7 0 163.8 0H284.2c12.1 0 23.2 6.8 28.6 17.7L320 32h96c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 96 0 81.7 0 64S14.3 32 32 32h96l7.2-14.3zM32 128H416V448c0 35.3-28.7 64-64 64H96c-35.3 0-64-28.7-64-64V128zm96 64c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16z"/></svg></button>
          </td>
          <td>
            <form action="" class="row " onsubmit="modify_cart_quantity(event)">
              <div class="form-outline col-3">
                <input
                  type="number"
                  class="form-control "
                  placeholder="{{this.quantity}}"
                    name="units"
                      min="0"
                      max="{{this.max}}"
                      required />
                <input type="hidden" name="pid" value="{{this.product_id._id}}">
                <input type="hidden" name="quantity" value="{{this.quantity}}">
              </div>
              <input
                type="submit"
                 value="Modificar"
                class="btn btn-success col-3"
              ></input>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<script src="/public/js/cartDB.js"></script>
        