<div
  class="container-fluid d-flex justify-content-center align-items-center my-5"
>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <th scope="row">Producto id: {{this.pid}}</th>
          <td>{{this.quantity}}</td>
          <td>
            <form action="" class="row" id="add_cart">
              <div class="form-outline col-4">
                <input
                  type="number"
                  class="form-control"
                  placeholder="0"
                    name="units"
                      min="0" max="{{this.quantity}}"
                             required />
                              <input type="hidden" name="product" value="{{product.id}}">
              </div>
              <input
                type="submit"
                 value="Modificar"
                class="btn btn-primary col-8"
              ></input>
           
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<script src="/public/js/cart.js"></script>